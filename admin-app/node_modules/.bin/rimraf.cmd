@echo off
call :find_dp0

if exist "%dp0%\node.exe" (
  set "_prog=%dp0%\node.exe"
) else (
  set "_prog=node"
  set "PATHEXT=%PATHEXT:;.JS;=;%"
)

if not defined _prog (
  echo Error: node.exe or node not found in %dp0% or PATH.
  exit /b 1
)

title %COMSPEC%
"%_prog%" "%~dp0..\rimraf\bin.js" %*

:find_dp0
set "dp0=%~dp0"
exit /b
