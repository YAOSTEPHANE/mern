#!/bin/sh

# Get the directory of the current script
basedir=$(dirname "$(readlink -f "$0")")

# Check if the script has permission to execute
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../jake/bin/cli.js" "$@"
else
  # On Windows, use cygpath to convert the path to Windows format
  if [[ $(uname) == CYGWIN* || $(uname) == MINGW* || $(uname) == MSYS* ]]; then
    basedir=$(cygpath -w "$basedir")
  fi
  
  exec node  "$basedir/../jake/bin/cli.js" "$@"
fi
