#!/bin/sh

# Get the directory of the current script
basedir=$(dirname "$(readlink -f "$0")")

# Check if the directory contains a Windows-style path
if [[ $basedir == */* ]]; then
  # Convert the path to Windows format if it contains forward slashes
  basedir=$(cygpath -w "$basedir")
fi

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../escodegen/bin/esgenerate.js" "$@"
else
  exec node  "$basedir/../escodegen/bin/esgenerate.js" "$@"
fi
